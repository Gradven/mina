/**app.wxss**/

.container {
  width: 750rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.footer_float {
  padding-bottom: 100rpx;
}

.flex_h {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}

.f_h {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.f_h_b {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
}

.f_h_s {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: flex-start;
}

.f_v_s {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
}

.grow {
  flex-flow: 1;
}

.sroll_container {
  width: 100%;
  height: 100%;
}

::-webkit-scrollbar {
  display: none;
}

.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.weui-loadmore {
  width: 100%;
  line-height: 3em;
  font-size: 14px;
  text-align: center;
  background: whitesmoke;
  padding: 20rpx 0rpx;
  box-sizing: border-box;
}

.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
  color: gray;
}

.line_two {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.line_one {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.hideInRightSide{
  position: relative;
  right: -100%;
}
