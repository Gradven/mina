.goods-item .divider{
  background-color: #e9eaec;
  width: 100%;
  height: 1rpx;
  margin:20rpx 0rpx;
}
.goods-item .btn-bar{
  clear: both;
  height: 50rpx;
}


.goods-item .btn{
  float:right;
  font-size:24rpx;
  width:180rpx;
  height:50rpx;
  line-height: 50rpx;
  text-align:center;
  border-radius: 25rpx;
  border:1px solid #666;
}
.goods-item .btn.unBtn{
  color:#fff;
  background:#fe5a5d;
  border:none;
}
