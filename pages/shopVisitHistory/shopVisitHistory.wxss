/* pages/shopVisitHistory/shopVisitHistory.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: whitesmoke;
}

.visitorContainer{
  width: 100%;
  background-color: white;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: column nowrap;
  margin-top: 2rpx;
}

.visitorContainer .visitor{
  width: 100%;
  height: 140rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  border-bottom: 2rpx solid #e9eaec;
  align-items: center;
}

.visitorContainer .visitor:last-child{
  border-bottom: 0rpx solid #e9eaec;
}

.visitorContainer .visitor .img{
  width: 80rpx;
  height: 80rpx;
  box-sizing: border-box;
  border-radius: 40rpx;
}

.visitorContainer .visitor .name{
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #1c2438;
  flex-grow: 1;
}

.visitorContainer .visitor .time{
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #1c2438;
  width: 180rpx;
  text-align: right;
}
