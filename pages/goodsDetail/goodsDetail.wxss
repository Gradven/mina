/* pages/goodsDetail/goodsDetail.wxss */
@import "../../wxParse/wxParse.wxss";
@import "../template/action_sheet/goods_spec.wxss";
@import "../template/action_sheet/goods_settle.wxss";
@import "../template/action_sheet/goods_address.wxss";
@import "../template/sold_out/sold_out.wxss";

page{
  display: block;
  width: 750rpx;
  background-color: white;
}

.other_shop{
  width: 100%;
  height: 90rpx;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  color: #1c2438;
  background-color: white;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  font-size: 24rpx;
  justify-content: space-between;
   border-bottom: 2px solid #e9eaec;
}

.other_shop .back_btn {
  width: auto;
  height: 50rpx;
  margin-left: 10rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  color: white;
  padding: 0 1em;
  background-color: #fe5a5d;
}

.banner {
  width: 750rpx;
  height: 750rpx;
  display: flex;
  flex-flow: column nowrap;
  box-sizing: border-box;
  align-items: center;
  position: relative;
  background-color: white;
}

/* width: 630rpx; */

.banner .swiper {
  width: 750rpx;
  height: 750rpx;
  box-sizing: border-box;
}

.banner .swiper .img_shadow {
  margin: 40rpx 105rpx;
  width: 540rpx;
  height: 640rpx;
  border-radius: 20rpx;
  background-color: white;
  box-sizing: border-box;
  box-shadow: 0 10rpx 60rpx #ccc;
}

