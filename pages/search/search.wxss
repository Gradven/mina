@import "../template/template.wxss";

page {
  display: block;
  min-height: 100%;
  background-color: whitesmoke;
}

.top_action {
  position: fixed;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 100%;
  height: 106rpx;
  background-color: white;
  box-sizing: border-box;
}

.top_action .search_box {
  width: 720rpx;
  margin-left: 30rpx;
  box-sizing: border-box;
}

.goods_container {
  width: 100%;
  margin-top: 106rpx;
}

.empty_search {
  width: 100%;
  height: 500rpx;
  align-items: center;
  flex-flow: column nowrap;
  justify-content: center;
  display: flex;
  position: absolute;
  top: 30%;
  left: 0;
  font-size: 28rpx;
  color: #cdcdcd;
}

