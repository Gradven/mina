.share_view_container {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  z-index: 1002;
}

.share_view_container .close {
  align-self: flex-end;
  margin: 30rpx 30rpx;
}

.share_view_container .btn {
  margin-top: 30rpx;
  color: white;
  height: 90rpx;
  width: 80%;
  font-size: 32rpx;
  text-align: center;
  border-radius: 45rpx;
  background-color: #fe5a5d;
  line-height: 90rpx;
}


.share_view_container .tips {
  margin-top: 30rpx;
  color: white;
  font-size: 26rpx;
}


.share_swiper{
  width: 100%;
  height: 700rpx;
  white-space: nowrap;
  display: flex;
  flex-flow: row nowrap;
  box-sizing: border-box;
}

.share_swiper .si{
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: center;
}

.share_swiper .si .img{
  width: 476rpx;
  height: 100%;
  background-color: white;
}