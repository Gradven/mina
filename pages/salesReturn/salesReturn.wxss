/* pages/salesReturn/salesReturn.wxss */

page {
  display: block;
  min-height: 100%;
  background-color: whitesmoke;
}

.sr_flow {
  width: 100%;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  background-color: #fff4e2;
  font-size: 24rpx;
  color: #1c2438;
  align-items: center;
}

.container .goods {
  display: flex;
  background-color: white;
  flex-flow: row nowrap;
  width: 100%;
  padding: 30rpx 50rpx;
  box-sizing: border-box;
}

.container .goods .img {
  width: 220rpx;
  height: 220rpx;
  border-radius: 20rpx;
}

.container .goods .intro {
  width: 430rpx;
  padding-left: 30rpx;
  height: 200rpx;
  display: flex;
  flex-flow: column nowrap;
}

.container .goods .intro .space_holder {
  flex-grow: 1;
}

.container .goods .intro .specs {
  font-size: 22rpx;
  color: #80848f;
}

.container .goods .intro .priceContainer {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  color: #80848f;
  font-size: 28rpx;
  align-items: center;
  margin-top: 30rpx;
}

.container .goods .intro .priceContainer .price {
  color: #1c2438;

}

.container .goods .intro .name {
  font-size: 26rpx;
  color: #1c2438;
}

.container .row {
  width: 100%;
  height: 120rpx;
  padding-left: 30rpx;
  margin-top: 20rpx;
  background-color: white;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  font-size: 30rpx;
}

.container .row .title {
  width: 220rpx;
  color: black;
}

.container .row .content {
  font-weight: bold;
  color: black;
  /* flex-grow: 1; */
  width: 430rpx;
}

.container .row .remark {
  color: black;
  /* flex-grow: 1; */
  width: 430rpx;
}

.container .sr_amount_container {
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  font-size: 26rpx;
  color: #80848f;
  align-items: center;
  background-color: white;
  padding-bottom: 30rpx;
}

.container .sr_amount_container .amount {
  color: #fe5a5d;
  font-weight: bold;
  font-size: 32rpx;
}

.container .address_container {
  margin-top: 20rpx;
  width: 100%;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: column nowrap;
  background-color: white;
}

.container .address_container .title {
  font-size: 30rpx;
  color: black;
}

.container .address_container .consignee {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #80848f;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.container .address_container .consignee .name {
  font-size: 28rpx;
  color: #1c2438;
  flex-grow: 1;
}

.container .address_container .consignee .tel{
   color: #1c2438;
}

.container .address_container .detail {
  margin-top: 30rpx;
  font-size: 26rpx;
  color: #80848f;
}


.btn_save{
  position: fixed;
  bottom:100rpx;
  left: 10%;
  color: white;
  height: 90rpx;
  width: 80%;
  font-size: 32rpx;
  box-sizing: border-box;
  text-align: center;
  border-radius: 45rpx;
  background-color: #fe5a5d;
  line-height: 90rpx;
  
}