/* pages/login/login.wxss */

.container {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: flex-start;
} 

.app-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom:1px dashed #cc9a00;
  width: 80%;
}

.app-logo {
  width: 128rpx;
  height: 128rpx;
  margin-top: 120rpx;
  border-radius: 50%;
  overflow: hidden;
}
.app-name {
  font-size: 38rpx;
  margin-top: 25rpx;
  margin-bottom: 60rpx;
}

.auth-title {
  font-size: 32rpx;
  margin-top: 64rpx;
  margin-bottom: 40rpx;
  width: 600rpx;
}
.auth-info {
  display: flex;
  flex-direction: column;
  color: #333;
  font-size: 36rpx;
}
.auth-wrap-obtain{
  margin-bottom: 10rpx;
}
.auth-desc-obtain {
  font-size: 22rpx;
}
.auth-desc-purpose {
  font-size: 34rpx;
}

.login-btn{
  margin-top:64rpx;
  width: 600rpx;
  color: white;
  background-color: #cc9a00;
}
.login-btn::after{
  border:0
}