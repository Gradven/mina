.order-count-box{
  position:relative;
  margin:30rpx auto;
  padding:30rpx;
  width:700rpx;
  height:300rpx;
  box-sizing: border-box;
  border-radius:30rpx;
  background:#f55;
}
.order-count-box .title{
  font-size:30rpx;
  height: 60rpx;
  color: #fff;
  line-height: 60rpx;
}
.order-count-box .title .redpacket{
  line-height: 60rpx;
}
.order-count-box .balance{
  font-size: 60rpx;
  line-height: 120rpx;
  color:#fff;
}

.goods-list{
  background: #f2f2f2;
}
.goods-list .item{
  margin-bottom:15rpx;
  padding:30rpx;
  background: #fff;
}
.goods-list .item .order-no{
  font-size:24rpx;
  line-height: 30rpx;
}
.goods-list .item image{
  float:left;
  margin-right: 50rpx;
  width:200rpx;
  height: 200rpx;
}

.goods-list .item .content{
  float: left;
  margin-bottom:30rpx;
  width:440rpx;
  height: 200rpx;
}

.goods-list .item .content .name{
  font-size:32rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: pre-wrap;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 48rpx;
  color:#999;
}

.goods-list .item .content .spec{
  font-size:24rpx;
  line-height: 48rpx;
  color:#999;
}

.goods-list .item .content .price{
  font-size:32rpx;
  line-height: 64rpx;
  border-top:none;
  color:#333;
}

.goods-list .item .content .price text{
  float:right;
  color:#999;
}

.goods-list .item .amountRetail{
  clear:both;
  font-size:30rpx;
  line-height: 60rpx;
  text-align: right;
  border-top:1px solid #eee;
}

.more{
  clear: both;
  font-size: 24rpx;
  line-height: 72rpx;
  text-align: center;
  color:#999;
}