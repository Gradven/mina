page{
  height: 100%;
}
.container{
  background: #fff;
}
.notice{
  font-size:24rpx;
  padding:0 24rpx;
  color:#fff;
  height:48rpx;
  line-height:48rpx;
  background-color: #cfb59f;
}

.idcard-box{
  padding:30rpx;
  background: #fff;
}
.idcard-box .title{
  font-size:26rpx;
  color:#999;
  margin-bottom:70rpx;
}
.upload{
  margin:0 auto;
  width:650rpx;
  height: 300rpx;
}
.upload .img{
  float:left;
  width:300rpx;
  height: 300rpx;
}
.upload .img:first-child{
  margin-right: 50rpx;
}
.upload .img .desc{
  font-size:26rpx;
  margin:31rpx 0 39rpx 0;
  height: 30rpx;
  color:#333;
  line-height: 30rpx;
  text-align: center;
}
.upload .img image{
  display: block;
  width:300rpx;
  height:200rpx;
}
.row{
  font-size:34rpx;
  height: 130rpx;
  line-height: 130rpx;
  color:#333;
}
.label{
  float:left;
  width: 200rpx;
}
.row input{
  float:left;
  width: 490rpx;
  height: 100%;
}
.border-bottom{
  border-bottom:1px solid #eee;
}
.container .btn{
  clear:both;
  margin:75rpx auto 0;
  width: 682rpx;
  height: 88rpx;
  line-height:88rpx;
  color:#fff;
  border-radius: 10rpx;
  text-align: center;
  background: #FF3838;
  box-shadow: 0 15rpx 13rpx 0 rgba(255,56,56,0.21);
}

.desc-box{
  position:absolute;
  bottom:45rpx;
  width: 750rpx;
  font-size: 28rpx;
  color: #999999;
  line-height: 30rpx;
  text-align: center;
}
.desc-box>view{
  display: inline-block;
}

.dialog-pop{
  position: fixed;
  top:0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 99;
  background: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
}

.dialog-box{
  position: absolute;
  left:95rpx;
  width: 560rpx;
  border-radius:10rpx;
  background: #fff;
}

.dialog-box .title{
  font-size:30rpx;
  text-align: center;
  line-height: 100rpx;
}

.dialog-box image{
  display: block;
  margin:0 auto;
  width: 341rpx;
  height: 180rpx;
}

.dialog-box .desc{
  margin-bottom: 20rpx;
  font-size:24rpx;
  text-align: center;
  line-height: 72rpx;
  color:#686868;
}
.dialog-box .btn{
  font-size:30rpx;
  color:#036bd6;
  line-height:86rpx;
  text-align: center;
  border-top:1px solid #ddd;
}