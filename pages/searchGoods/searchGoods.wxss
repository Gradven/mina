page{
  display: block;
  min-height: 100%;
  background:#eee;
}
.container{
  width:750rpx;
}
.top_action {
  position: relative;
  top:0;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  width: 100%;
  height: 106rpx;
  background-color: white;
  box-sizing: border-box;
}

.top_action .search_box {
  width: 690rpx;
  margin: 0 auto;
  box-sizing: border-box;
}
.empty_container {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  margin-top: 40%;
  width: 100%;
  height: 60%;
}

.empty_container .img {
  width: 100rpx;
  height: 100rpx;
}

.empty_container .des {
  margin: 20rpx auto;
  font-size: 28rpx;
}
.list{
  margin-top:0rpx;
}
.list .item{
  padding:20rpx;
  margin-bottom:20rpx;
  background: #fff;
  box-sizing:border-box;
}
.list .item image{
  float:left;
  width:240rpx;
  height:240rpx;
}
.list .item .content{
  float:left;
  margin-left:50rpx;
  width:400rpx;
}
.list .item .content .name{
  font-size:28rpx;
  max-height: 120rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: pre-wrap;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.list .item .content .desc{
  font-size:22rpx;
  color:#999;
  margin-bottom:40rpx;
  height: 80rpx;
  line-height: 40rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: pre-wrap;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list .item .content .price{
  font-size:24rpx;
  margin-bottom:50rpx;
}
.list .item .content .price text{
  margin-right:30rpx;
}
.btn-bar{
  clear: both;
  height: 70rpx;
  border-top:1px solid #eee;
}
.btn{
  float:right;
  font-size:24rpx;
  margin-top:17rpx;
  width:180rpx;
  height:50rpx;
  line-height: 50rpx;
  text-align:center;
  border-radius: 50rpx;
  border:1px solid #666;
}
.btn.unBtn{
  color:#fff;
  background:#fd6066;
  border:none;
}
.more{
  font-size: 24rpx;
  line-height: 72rpx;
  text-align: center;
  color:#999;
}